{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Edit|MultiEdit|Write)$",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/claude-hooks/pre-edit-check.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Edit|MultiEdit|Write)$",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/claude-hooks/post-edit-log.sh"
          }
        ]
      }
    ]
  }
}