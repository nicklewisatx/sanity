{
  "hooks": {
    "typescript": {
      "enableFormatting": true,
      "enableLinting": true,
      "enableTypeChecking": false,
      "lintRules": ["no-unused-vars", "no-undef", "prefer-const"],
      "timeout": 2000
    }
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    }
  }
}