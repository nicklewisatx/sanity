{
  "hooks": {
    "typescript": {
      "enableFormatting": true,
      "enableLinting": true,
      "enableTypeChecking": true,
      "lintRules": ["no-unused-vars", "no-undef", "prefer-const"],
      "timeout": 5000,
      "preCommit": {
        "commands": [
          "pnpm run ci-parity",
          "pnpm run test --run",
          "pnpm run check-types"
        ],
        "stopOnError": true
      }
    }
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    }
  }
}