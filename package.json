{
  "name": "nick-lewis",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "node scripts/process-manager/index.js start all",
    "dev:web": "node scripts/process-manager/index.js start web",
    "dev:studio": "node scripts/process-manager/index.js start studio",
    "dev:storybook": "node scripts/process-manager/index.js start storybook",
    "dev:claude": "CLAUDE_MODE=true pnpm dev",
    "stop": "node scripts/process-manager/index.js stop all",
    "restart": "node scripts/process-manager/index.js restart all",
    "status": "node scripts/process-manager/index.js status",
    "pm": "node scripts/process-manager/index.js",
    "start": "./scripts/start-dev.sh",
    "start:background": "nohup ./scripts/start-dev.sh > dev.log 2>&1 &",
    "start:claude": "turbo dev --no-daemon --concurrency=4",
    "lint": "turbo lint",
    "check-types": "turbo check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ui": "vitest --ui",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "vitest run --coverage",
    "ci-parity": "tsx scripts/test-ci-parity.ts",
    "pretest": "pnpm run ci-parity",
    "validate": "turbo run lint check-types test",
    "validate:ci": "pnpm run ci-parity && turbo run lint check-types test --concurrency=1",
    "postinstall": "turbo build --filter=@workspace/*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "5.7.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.2",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@sanity/client": "^7.6.0"
    }
  }
}