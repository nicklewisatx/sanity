{
  "name": "nick-lewis",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm exec sanity-cli dev --background",
    "watch": "pnpm exec sanity-cli dev --watch",
    "kill": "pnpm exec sanity-cli kill",
    "stop": "pnpm exec sanity-cli kill",
    "status": "pnpm exec sanity-cli status",
    "restart": "pnpm exec sanity-cli restart",
    "env:validate": "pnpm exec sanity-cli env validate",
    "env:setup": "pnpm exec sanity-cli env setup",
    "lint": "turbo lint",
    "check-types": "turbo check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ui": "vitest --ui",
    "validate": "turbo run lint check-types test",
    "postinstall": "turbo build --filter=@workspace/cli"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.7.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.2",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@sanity/client": "^7.6.0"
    }
  },
  "dependencies": {
    "@logtail/node": "^0.5.5"
  }
}