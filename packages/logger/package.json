{
  "name": "@workspace/logger",
  "version": "0.0.1",
  "type": "module",
  "description": "Edge-compatible logger for the monorepo",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@logtail/node": "^0.5.5"
  },
  "devDependencies": {
    "@workspace/typescript-config": "workspace:*",
    "@edge-runtime/vm": "^5.0.0",
    "tsup": "^8.3.5",
    "typescript": "5.7.3",
    "vitest": "^3.2.4"
  },
  "license": "MIT"
}